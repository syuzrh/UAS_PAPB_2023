<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddDataActivity"
    android:padding="35dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backToAdmin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Add Movie"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bginput"
            android:src="@drawable/baseline_add_photo_alternate_24"/>

        <EditText
            android:id="@+id/title_mv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bginput"
            android:layout_marginTop="20dp"
            android:hint="Title"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/storyline_mv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bginput"
            android:layout_marginTop="20dp"
            android:hint="Storyline"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/genre_mv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bginput"
            android:layout_marginTop="20dp"
            android:hint="Genre"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/director_mv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bginput"
            android:layout_marginTop="20dp"
            android:hint="Director"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/rating_mv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bginput"
            android:layout_marginTop="20dp"
            android:hint="Rating"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add Data"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"/>

    </LinearLayout>



</LinearLayout>